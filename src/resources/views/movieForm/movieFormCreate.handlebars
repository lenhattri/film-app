
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<link rel="stylesheet" href="../css/movieFormCreate.css">

<div class="container">
    <h1>Thêm phim mới</h1>
    <div class="row">
        <div class="col-md-6 enter_movie_form">
            <form action="/movie-form" method="post" id="adminForm">
                <div class="form-group">
                    <label for="filmName">Name</label>
                    <input type="text" class="form-control" name="filmName" id="filmName" aria-describedby="filmName"
                        placeholder="Enter film's name">
                </div>
                <div class="form-group">
                    <label for="categories">Categories</label>
                    <input type="text" class="form-control" name="categories" id="categories"
                        aria-describedby="categories" placeholder="Enter film's categories">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" class="form-control" name="image" id="image" aria-describedby="image"
                        placeholder="Enter the link image">
                </div>
                <div class="form-group">
                    <label for="release">Release</label>
                    <input type="date" class="form-control" name="release" id="release" aria-describedby="name"
                        placeholder="Enter the time release">
                </div>
                <div class="form-group">
                    <label for="script">Script</label>
                    <input type="textarea" class="form-control" id="script" name="script" aria-describedby="name"
                        placeholder="Enter film'script">
                </div>
                <div class="form-group">
                    <label for="embed">Embed</label>
                    <input type="text" class="form-control" name="embed" id="embed" aria-describedby="name"
                        placeholder="Enter the embed tag">
                </div>
                <input type="button" id="buttonForm" value="+Thêm" class="btn btn-success">

            </form>
        </div>
    </div>

</div>
<script>

    $('#buttonForm').confirm({
        title: 'Xác nhận',
        content: 'Bạn có chắc chắn muốn tạo mới không?',
        buttons: {
            confirm: {
                text: 'Xác nhận',
                action: function () {
                   $('#adminForm').submit();
                }
            },
            cancel: {
                text: 'Huỷ bỏ'
            },
        }
    });

    


</script>