<link rel="stylesheet" href="../css/categories.categories.css">
<div id="background">
    <img src="../../../images/background.jpg" alt="">
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="nav-bar">
                <nav>
                   <a class="nav-item" href="/watch-movie">Trang chủ</a>
                    <a class="nav-item" href="">Phim mới</a>
                    <a class="nav-item" href="/categories?c=Romance">Romance</a>
                    <a class="nav-item" href="/categories?c=Hành động">Hành động</a>
                    <div class="dropdown nav-item">
                        <button class="btn dropdown-toggle nav-other-button" type="button" id="dropdown-menu-button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Khác
                        </button>
                        <div class="dropdown-menu nav-other-menu">
                            <a class="nav-other-menu_item" href="/categories?c=Phiêu lưu">Phiêu lưu</a>
                            <a class="nav-other-menu_item" href="/categories?c=Hài hước">Hài hước</a>
                            <a class="nav-other-menu_item" href="#">Tất cả</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="row">
        <h3 class="categories-box_title">{{category.category}}</h3>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="list">
                {{#each movies}}
                <div class="list_item">
                    <div class="list_item-image">
                        <a href="/watch-movie/{{slug}}/details">
                            <div class="playButton">
                                <i class=" fa-solid fa-play" style="font-size: 20px;"></i>
                            </div>
                            <img src="{{image}}" alt="{{script}}">
                            <div class="list_item-name">
                                <p>{{filmName}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="../js/backgroundResponsive.js"></script>